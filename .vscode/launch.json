{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Signal",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Signal",  // Path to your compiled binary
            "args": [],  // Command-line arguments (if any)
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",  // Working directory (where the binary is located)
            "environment": [],
            "externalConsole": false,  // Use an external terminal for input/output
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Path to gdb
            "preLaunchTask": "",  // Task to run before launching (optional)
            "sourceFileMap": {
                "/build/source": "${workspaceFolder}"
            },
            "logging": {
                "moduleLoad": false,
                "trace": true,
                "traceResponse": true,
                "engineLogging": false
            }
        }
    ]
}